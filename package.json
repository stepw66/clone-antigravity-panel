{
  "name": "antigravity-panel",
  "displayName": "Toolkit for Antigravity",
  "description": "%extension.description%",
  "version": "2.2.1",
  "publisher": "n2ns",
  "license": "GPL-3.0-only",
  "repository": {
    "type": "git",
    "url": "https://github.com/n2ns/antigravity-panel.git"
  },
  "icon": "assets/icon.png",
  "engines": {
    "vscode": "^1.104.0"
  },
  "l10n": "./l10n",
  "main": "./dist/extension.js",
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "tfa-sidebar",
          "title": "%viewsContainers.tfa-sidebar.title%",
          "icon": "assets/icon.svg"
        }
      ]
    },
    "views": {
      "tfa-sidebar": [
        {
          "type": "webview",
          "id": "tfa.sidebar",
          "name": "%views.tfa.sidebar.name%"
        }
      ]
    },
    "commands": [
      {
        "command": "tfa.openPanel",
        "title": "%command.openPanel.title%",
        "category": "%extension.category%"
      },
      {
        "command": "tfa.showCacheSize",
        "title": "%command.showCacheSize.title%",
        "category": "%extension.category%"
      },
      {
        "command": "tfa.cleanCache",
        "title": "%command.cleanCache.title%",
        "category": "%extension.category%",
        "icon": "$(trash)"
      },
      {
        "command": "tfa.refreshQuota",
        "title": "%command.refreshQuota.title%",
        "category": "%extension.category%",
        "icon": "$(refresh)"
      },
      {
        "command": "tfa.showDisclaimer",
        "title": "%command.showDisclaimer.title%",
        "category": "%extension.category%",
        "icon": "$(info)"
      },
      {
        "command": "tfa.openSettings",
        "title": "%command.openSettings.title%",
        "category": "%extension.category%",
        "icon": "$(gear)"
      },
      {
        "command": "tfa.restartLanguageServer",
        "title": "%command.restartLanguageServer.title%",
        "category": "%extension.category%",
        "icon": "$(sync)"
      },
      {
        "command": "tfa.restartUserStatusUpdater",
        "title": "%command.restartUserStatusUpdater.title%",
        "category": "%extension.category%",
        "icon": "$(refresh)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "tfa.refreshQuota",
          "when": "view == tfa.sidebar",
          "group": "navigation"
        },
        {
          "command": "tfa.showDisclaimer",
          "when": "view == tfa.sidebar",
          "group": "navigation"
        },
        {
          "command": "tfa.openSettings",
          "when": "view == tfa.sidebar",
          "group": "navigation"
        }
      ]
    },
    "configuration": [
      {
        "title": "TFA: Dashboard",
        "properties": {
          "tfa.1_dashboard.10_gaugeStyle": {
            "type": "string",
            "default": "semi-arc",
            "order": 10,
            "enum": [
              "semi-arc",
              "classic-donut"
            ],
            "enumDescriptions": [
              "%config.quotaDisplayStyle.semi-arc%",
              "%config.quotaDisplayStyle.classic-donut%"
            ],
            "description": "%config.dashboard.10_gaugeStyle.description%"
          },
          "tfa.1_dashboard.20_viewMode": {
            "type": "string",
            "default": "groups",
            "order": 20,
            "enum": [
              "groups",
              "models"
            ],
            "enumDescriptions": [
              "%config.visualizationMode.groups%",
              "%config.visualizationMode.models%"
            ],
            "description": "%config.dashboard.20_viewMode.description%"
          },
          "tfa.1_dashboard.30_historyRange": {
            "type": "number",
            "default": 90,
            "minimum": 10,
            "maximum": 120,
            "order": 30,
            "description": "%config.dashboard.30_historyRange.description%"
          },
          "tfa.1_dashboard.40_refreshRate": {
            "type": "number",
            "default": 120,
            "minimum": 60,
            "order": 40,
            "description": "%config.dashboard.40_refreshRate.description%"
          },
          "tfa.1_dashboard.50_includeSecondaryModels": {
            "type": "boolean",
            "default": false,
            "order": 50,
            "description": "%config.dashboard.50_includeSecondaryModels.description%"
          }
        }
      },
      {
        "title": "TFA: Status Bar",
        "properties": {
          "tfa.2_status.10_showQuota": {
            "type": "boolean",
            "default": true,
            "order": 10,
            "description": "%config.status.10_showQuota.description%"
          },
          "tfa.2_status.20_showCache": {
            "type": "boolean",
            "default": true,
            "order": 20,
            "description": "%config.status.20_showCache.description%"
          },
          "tfa.2_status.30_displayFormat": {
            "type": "string",
            "default": "percentage",
            "order": 30,
            "enum": [
              "percentage",
              "resetTime",
              "used",
              "remaining"
            ],
            "enumDescriptions": [
              "%config.statusBarStyle.percentage%",
              "%config.statusBarStyle.resetTime%",
              "%config.statusBarStyle.used%",
              "%config.statusBarStyle.remaining%"
            ],
            "description": "%config.status.30_displayFormat.description%"
          },
          "tfa.2_status.40_warningThreshold": {
            "type": "number",
            "default": 30,
            "minimum": 5,
            "maximum": 100,
            "order": 40,
            "description": "%config.status.40_warningThreshold.description%"
          },
          "tfa.2_status.50_criticalThreshold": {
            "type": "number",
            "default": 10,
            "minimum": 1,
            "maximum": 50,
            "order": 50,
            "description": "%config.status.50_criticalThreshold.description%"
          }
        }
      },
      {
        "title": "TFA: System & Maintenance",
        "properties": {
          "tfa.3_system.10_cacheWarningSize": {
            "type": "number",
            "default": 500,
            "minimum": 100,
            "order": 10,
            "description": "%config.system.10_cacheWarningSize.description%"
          },
          "tfa.3_system.20_autoClean": {
            "type": "boolean",
            "default": false,
            "order": 20,
            "description": "%config.system.20_autoClean.description%"
          },
          "tfa.3_system.30_hideEmptyFolders": {
            "type": "boolean",
            "default": false,
            "order": 30,
            "description": "%config.system.30_hideEmptyFolders.description%"
          },
          "tfa.3_system.40_scanInterval": {
            "type": "number",
            "default": 120,
            "minimum": 30,
            "maximum": 600,
            "order": 40,
            "description": "%config.system.40_scanInterval.description%"
          },
          "tfa.3_system.50_serverHost": {
            "type": "string",
            "default": "127.0.0.1",
            "order": 50,
            "description": "%config.system.50_serverHost.description%"
          },
          "tfa.3_system.60_apiPath": {
            "type": "string",
            "default": "/exa.language_server_pb.LanguageServerService/GetUserStatus",
            "order": 60,
            "description": "%config.system.60_apiPath.description%"
          },
          "tfa.3_system.99_debugMode": {
            "type": "boolean",
            "default": false,
            "order": 99,
            "description": "%config.system.99_debugMode.description%"
          }
        }
      }
    ]
  },
  "scripts": {
    "build": "node ./esbuild.js",
    "watch": "node ./esbuild.js --watch --sourcemap",
    "vscode:prepublish": "npm run build",
    "lint": "eslint src --ext .ts",
    "test": "tsc -p tsconfig.test.json && node ./out/test/runUnitTests.js",
    "test:server": "tsc -p tsconfig.test.json && node ./out/test/runServerTests.js",
    "prepare": "husky"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "^24.10.1",
    "@types/vscode": "^1.104.0",
    "@typescript-eslint/eslint-plugin": "^8.48.1",
    "@typescript-eslint/parser": "^8.48.1",
    "canvas": "^3.2.0",
    "esbuild": "^0.27.1",
    "eslint": "^9.39.1",
    "glob": "^13.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "mocha": "^11.7.5",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.1"
  },
  "dependencies": {
    "@vscode/codicons": "^0.0.43",
    "lit": "^3.3.1"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --fix --no-warn-ignored"
    ]
  }
}